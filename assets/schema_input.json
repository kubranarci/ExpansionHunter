{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/odcf/expansionhunter/master/assets/schema_input.json",
    "title": "odcf/expansionhunter pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "bam": {
                "errorMessage": "BAM file cannot contain spaces and must have extension '.bam'",
                "type": "string",
                "pattern": "^\\S+\\.bam$",
                "format": "file-path",
                "exists": true
            },
            "bai": {
                "errorMessage": "BAM index file cannot contain spaces and must have extension '.bai'",
                "type": "string",
                "pattern": "^\\S+\\.bai$",
                "format": "file-path",
                "exists": true
            },
            "sex": {
                "oneOf": [
                    {
                        "type": "string",
                        "enum": ["female", "male", "unknown"]
                    }
                ],
                "meta": ["sex"],
                "errorMessage": "Sex must be provided, has to be one of this values: 'unknown, male, female' and cannot contain spaces"
            },
            "phenotype": {
                "type": "string",
                "meta": ["phenotype"],
                "enum": ["mother", "father", "child", "tumor", "control", "single"],
                "errorMessage": "Phenotype must be provided and cannot contain spaces"
            },
            "case_id": {
                "type": "string",
                "meta": ["case_id"],
                "pattern": "^\\S+$",
                "errorMessage": "Case name must be provided and cannot contain spaces"
            }
        },
        "uniqueEntries": ["case_id"],
        "required": ["sample", "sex", "phenotype", "case_id", "bam", "bai"]
    }
}
