nextflow_pipeline {

    name "Test pipeline"
    script "../main.nf"
    tag "pipeline"
    config "../conf/test.config"

    test("-profile test") {

        when {
            params {
                outdir = "$outputDir"
                input = "../assets/samplesheet_bam.csv"
            }
        }

        then {
            def stable_name = getAllFilesFromDir(params.outdir, relative: true, includeDir: true, ignore: ['pipeline_info/*.{html,json,txt}'])
            def stable_path = getAllFilesFromDir(params.outdir, ignoreFile: 'tests/.nftignore')
            assertAll(
                { assert workflow.success},
                { assert snapshot(
                    workflow.trace.succeeded().size(),
                    removeNextflowVersion("$outputDir/pipeline_info/expansionhunter_software_mqc_versions.yml"),
                    stable_name,
                    stable_path
                ).match() }
            )
        }
    }
}
